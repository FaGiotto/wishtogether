{
  "expo": {
    "name": "WishTogether",
    "slug": "wishtogether",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "wishtogether",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6C63FF"
    },
   "ios": {
      "supportsTablet": true,
      "newArchEnabled": false,
      "bundleIdentifier": "com.wishtogether.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6C63FF"
      },
      "package": "com.wishtogether.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#6C63FF"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "WishTogether usa la galleria per aggiungere immagini ai desideri."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
